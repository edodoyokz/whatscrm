# AI Configuration Template
# Copy this to .env and fill in your API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration  
GEMINI_API_KEY=your_gemini_api_key_here

# AI Provider Settings
AI_DEFAULT_PROVIDER=openai
AI_FALLBACK_PROVIDER=gemini
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7

# Natural Language Processing Settings
NLP_CONFIDENCE_THRESHOLD=0.7
NLP_EMOTION_SENSITIVITY=0.6
NLP_INTENT_ACCURACY=0.8

# Personality Engine Settings
PERSONALITY_DEFAULT_TYPE=friendly
PERSONALITY_RESPONSE_LENGTH=balanced
PERSONALITY_TONE=empathetic

# Rate Limiting
AI_RATE_LIMIT_REQUESTS=1000
AI_RATE_LIMIT_WINDOW=3600000

# Analytics
AI_ANALYTICS_ENABLED=true
AI_CONVERSATION_LOGGING=true
